@import './../../../framework/tailwind.pcss';

.flex-header {
    @apply py-24 relative;
    @apply flex items-center;
    @apply sm:py-48 xl:py-56;

    &--home {
        @apply h-[75vh];
    }

    .w-img {
        @apply absolute-full;

        &:after {
            content: '';
            @apply absolute-full;
            background: linear-gradient(90deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0) 98.52%);
        }

        img {
            @apply cover-full;
        }
    }

    .w-content {

    }
}
