<section class="bloc-three-columns p-default">
    <div class="container">
        <div class="title text-center lg:max-w-[80%] lg:mx-auto">
            <h2 class="xl5">{{ fields.title }}</h2>
            <p class="p text-gray-05 mt-4">{{ fields.text }}</p>
        </div>

        <div class="columns mt-10 lg:mt-12 -mx-3 -mb-6 flex flex-wrap justify-center">
            {% for item in fields.columns %}
                <div class="bloc text-center w-full sm:w-1/2 lg:w-1/3 px-3 mb-6">
                    <div class="inner h-full w-full bg-primary-10 p-6 md:p-8 flex flex-col items-center">
                        <div class="icon w-12 h-12 bg-primary-light rounded-full flex items-center justify-center">
                            <i class="gg-user text-primary-white"></i>
                        </div>
                        <p class="xl2 mt-4">{{ item.title }}</p>
                        <div class="mt-4 p text-gray-05">{{ item.text }}</div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
