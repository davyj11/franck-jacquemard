{% from 'components/button/button.html.twig' import _button %}

<section class="bloc-testimony p-default overflow-hidden">
    <div class="container">
        <div class="bloc-testimony__header flex flex-col max-lg:items-start lg:flex-row lg:items-center lg:justify-between">
            <div class="title xl5">{{ fields.title }}</div>
            {{ _button({
                classes: 'max-lg:mt-6 ',
                title: "Voir tous les avis",
                url: link(const_pages.testimonies.ID),
                type: "secondary"
            }) }}
        </div>

        <div class="bloc-textimony__list mt-10 lg:mt-12 -mx-3 -mb-6 flex flex-wrap justify-center">
            {% for item in fields.items %}
                {% set post = getTimber(item.ID) %}
                {% set card = post.meta('testi') %}

                <div class="group w-full md:w-1/2 xl:w-1/3 px-3 mb-6">
                    {% include 'components/cards/card-review.html.twig' with {settings:{
                        title: card.title,
                        rating: card.rating,
                        name: card.name,
                        date: card.date,
                        text: card.text,
                    }} %}
                </div>
            {% endfor %}
        </div>
    </div>
</section>

{% block javascript %}
{{ encore_entry_script_tags('components/blocks/last_realisations/index') }}
{% endblock %}
