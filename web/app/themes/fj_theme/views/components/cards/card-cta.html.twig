{% macro _cardCta(settings = {}) %}

	{# Default Settings #}
	{% set defaultSettings = {
		'title' : "",
		'text'  : null,
		'url' : null,
		"imgSrc" : null
	} %}

	{% set settings = defaultSettings|merge(settings) %}


	<div class="mb-6 last:mb-0">
		<div class="group relative">
			<div class="bg-white sm:p-8 flex items-center justify-between  relative z-10">
				<div class="flex items-center">
					<img src="{{ settings.imgSrc }}" class="w-[74px] grayscale group-hover:grayscale-0 trans-default"/>
					<div class="ml-6 mr-5 sm:mr-14 }}">
						<p class="h5">{{ settings.title }}</p>
						<p class="p text-gray-01 ">{{ settings.text }}</p>
					</div>
				</div>

				<i class="icon-arrowright text-gray-01 text-xlg"></i>
				<a href="{{ settings.url }}"
				   class="absolute inset-0 z-10" ></a>
			</div>


			<div class="absolute top-[10px] left-[-20px] z-0 -skew-x-[11deg] bg-secondary-02 w-full h-full z-0 rotate-[-0.9deg] opacity-0 group-hover:opacity-100 trans-default"></div>
		</div>
	</div>

{% endmacro %}