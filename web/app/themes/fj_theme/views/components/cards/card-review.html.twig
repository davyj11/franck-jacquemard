{# Default Settings #}
{% set defaultSettings = {
    classes: "",
    title: "Bon Ã  savoir",
    icon: 'icon-lightbulb-alt',
} %}

{% set settings = defaultSettings|merge(settings) %}

<article class="card-review border border-primary p-10 flex flex-col {{ settings.classes }}">
    <div class="rating flex items-center">
        {% for i in 1..5 %}
            {% set starClass = settings.rating|round(2) >= i - 0.25 ? "gg-arrow-right" : rating|round(2) >= i - 0.75 ? "icon-star-half" : "gg-arrow-left" %}
            <i class="{{ starClass }} rating__icon"></i>
        {% endfor %}
    </div>
    <div class="xl2 mt-4">{{ settings.title }}</div>
    <div class="wysiwyg mt-4">{{ settings.text }}</div>
    <div class="mt-4 p-s font-bold text-primary">{{ settings.date }}</div>
    <div class="p text-gray-05">{{ settings.name }}</div>
</article>
